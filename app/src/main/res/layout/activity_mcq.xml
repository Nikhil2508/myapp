<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/l_single_mcq_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mcq_page" />

    <LinearLayout
        android:id="@+id/ll_bottom_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/dark_grey2"
            android:padding="20dp"
            android:src="@drawable/ic_left_arrow_active"/>

        <TextView
            android:id="@+id/tv_submit_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/light_grey"
            android:gravity="center"
            android:text="Submit Test"/>

        <ImageView
            android:id="@+id/iv_forward_arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/dark_grey2"
            android:padding="20dp"
            android:src="@drawable/ic_right_arrow_active"/>
    </LinearLayout>



</RelativeLayout>