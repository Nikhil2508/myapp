<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nick.myapplication.HomeActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technical"
        android:id="@+id/bt_tech"
        android:layout_centerInParent="true"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aptitude"
        android:id="@+id/bt_apti"
        android:layout_below="@+id/bt_tech"
        android:layout_alignEnd="@+id/bt_tech"
        android:layout_alignStart="@id/bt_tech"

        />

</RelativeLayout>
